<div id="<%= dom_id publication %>">
  <p>
    <%= image_tag publication.image, size:500 %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= publication.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= publication.description %>
  </p>

  <p>
    <strong>User:</strong>
    <%= publication.user.email %>
  </p>

</div>
