<h2>Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.label :email, class: "col-sm-2 col-form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
  </div>

  <div class="field mb-3">
    <%= f.label :password, class: "col-sm-2 col-form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
  </div>
  

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit "Iniciar sesión", class: "btn btn-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
